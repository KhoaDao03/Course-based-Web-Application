<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Maui.Views.InstructorView"
             Title="InstructorView"
             NavigatedTo="ContentPage_NavigatedTo">
            
    <VerticalStackLayout>

        <ListView
            ItemsSource ="{Binding Instructors}"
            SelectedItem="{Binding SelectedInstructor}">
        </ListView>
        <Entry Text="{Binding InstructorName}"/>
        <Button Text="Add Instructor" Clicked="Add_Clicked"></Button>
        <Button Text="Remove Instructor" Clicked="Remove_Clicked"></Button>
        <Button Text="View Students" Clicked="Students_Clicked"></Button>
        <Button Text="View Courses" Clicked="Courses_Clicked"></Button>

        <Button Text="Home" Clicked="Home_Clicked"/>

    </VerticalStackLayout>
</ContentPage>