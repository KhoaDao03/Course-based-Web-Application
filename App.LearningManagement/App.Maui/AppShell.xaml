<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="App.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:App.Maui"
    xmlns:views="clr-namespace:App.Maui.Views"

    Shell.FlyoutBehavior="Disabled"
    Title="App.Maui">

    <ShellContent
        Title="Home"
        Route="MainPage" 
        ContentTemplate="{DataTemplate local:MainPage}"
        />
    <ShellContent
        Title="Instructor View"
        Route="Instructor" 
        ContentTemplate="{DataTemplate views:InstructorView}"
        />
    <ShellContent
        Title="Student View"
        Route="Student" 
        ContentTemplate="{DataTemplate views:StudentView}"

        />




</Shell>
